{
  "name": "tomatoro",
  "version": "2.0.0",
  "private": true,
  "dependencies": {
    "codecov": "^3.0.0",
    "node-sass-chokidar": "^0.0.3",
    "npm-run-all": "^4.1.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "react-scripts": "1.1.1",
    "redux": "^3.7.2",
    "redux-devtools-extension": "^2.13.2",
    "redux-thunk": "^2.2.0"
  },
  "scripts": {
    "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "build-js": "react-scripts build",
    "build": "NODE_ENV=production npm-run-all build-css build-js",
    "test": "NODE_ENV=test react-scripts test --env=jsdom",
    "test-coverage": "NODE_ENV=test react-scripts test --env=jsdom --coverage && ./node_modules/.bin/codecov",
    "eject": "react-scripts eject"
  },
  "homepage": "https://tomatoro.com",
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  }
}
